<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_travel_event_details"
    tools:context="com.ityadi.app.tourmate.Activity.TravelEventDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textSize="23dp"
                    />
                <EditText
                    android:id="@+id/etEventName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="23dp"
                    />
                <EditText
                    android:id="@+id/etLocationCoverage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="23dp"
                    />
                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="23dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Journey Date"
                    android:textSize="23dp"
                    />
                <TextView
                    android:id="@+id/etJourneyDate"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textSize="23dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:textSize="23dp"
                    />
                <EditText
                    android:id="@+id/etBudgetAmount"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"
                    android:textSize="23dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Created At"
                    android:textSize="23dp"
                    />
                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginBottom="10dp"
                    android:textSize="23dp" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:onClick="updateTravelEvent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/update"
                android:background="@drawable/my_shape"
                android:textAllCaps="false"
                android:textSize="23dp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Update"/>

            <Button
                android:id="@+id/eventLocationWeather"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/weather"
                android:background="@drawable/my_shape"
                android:textAllCaps="false"
                android:textSize="23dp"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="5dp"
                android:text="Weather"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:onClick="captureImage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/add_moment"
                    android:background="@drawable/my_shape"
                    android:textAllCaps="false"
                    android:textSize="23dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Add Moment"/>

                <Button
                    android:onClick="captureImage"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/edit_moment"
                    android:background="@drawable/my_shape"
                    android:textAllCaps="false"
                    android:textSize="23dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="5dp"
                    android:text="Moment List"/>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
