<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ityadi.app.tourmate.Activity.WeatherFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/weather_bg"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/cityTimeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/cityTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="City"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/timeTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Time"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cityTimeLayout"
                android:gravity="center">

                <ImageView
                    android:id="@+id/weatherImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/weather"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/temparatureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageLayout">

                <TextView
                    android:id="@+id/temparatureTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Temparature"
                    android:textColor="@color/white"
                    android:textSize="40dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/headingLayout"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_below="@+id/temparatureLayout">

                <TextView
                    android:id="@+id/headingTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Heading"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headingLayout">

                <TextView
                    android:id="@+id/descriptionTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pressureLayout"
                android:layout_below="@+id/descriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Pressure"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/pressureTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Pressure"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/humidityLayout"
                android:layout_below="@+id/pressureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Humidity"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    />
                <TextView
                    android:id="@+id/humidityTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_weight="1"
                    android:text="Humidity"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forcastLayout"
                android:layout_below="@+id/pressureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">





            </LinearLayout>






        </RelativeLayout>
    </ScrollView>
</FrameLayout>
